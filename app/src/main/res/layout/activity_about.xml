<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:background="#F5F5F5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- App Icon -->
        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@mipmap/ic_launcher"
            android:layout_marginBottom="30dp"
            android:contentDescription="App Icon" />

        <!-- App Title -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Vehicle Loan Calculator"
            android:textSize="24sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="40dp"
            android:textColor="#333333" />

        <!-- Author Information -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Developer Information"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="20dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#E3F2FD"
            android:padding="20dp"
            android:layout_marginBottom="30dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="NAME: THAQIF AIMRAN BIN MOHAMMAD RIZAL"
                android:textSize="16sp"
                android:layout_marginBottom="12sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="MATRIC NO: 2023217904"
                android:textSize="16sp"
                android:layout_marginBottom="12sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="COURSE: CDCS2515B"
                android:textSize="16sp" />
        </LinearLayout>

        <!-- GitHub Repository -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="GitHub Repository"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="16dp" />

        <TextView
            android:id="@+id/tvGithubUrl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="https://github.com/yourusername/vehicle-loan-calculator"
            android:textSize="16sp"
            android:gravity="center"
            android:textColor="#2196F3"
            android:padding="16dp"
            android:background="#E3F2FD"
            android:clickable="true"
            android:focusable="true"
            android:textStyle="italic" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Click to open repository"
            android:textSize="14sp"
            android:gravity="center"
            android:layout_marginTop="8dp"
            android:textColor="#757575" />

        <!-- Copyright Notice -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Â© 2025 Vehicle Loan Calculator. All rights reserved."
            android:textSize="14sp"
            android:gravity="center"
            android:layout_marginTop="40dp"
            android:textStyle="italic"
            android:textColor="#757575" />

    </LinearLayout>
</ScrollView>